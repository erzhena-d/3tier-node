#set base image
FROM node:18
# set working directory
WORKDIR /usr/src/app
# copy file with packages to the working directory 
COPY package.json .
#install necessary packages
RUN npm install
#copy rest of the files 
COPY . .

ENV PORT=3000 \
    API_HOST=http://34.58.129.251:3001

EXPOSE 3000

CMD ["npm", "start"]

